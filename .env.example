# ============================================
# ENVIRONMENT: Local Development
# ============================================
# Copy this file: cp .env.example .env
# For production: cp .env.production.example .env

# ============================================
# PORT CONFIGURATION
# ============================================
BACKEND_PORT=4392
FRONTEND_PORT=8039

# ============================================
# DOMAIN CONFIGURATION
# ============================================
# For local development (running without Docker)
# FRONTEND_URL=http://localhost:5173
# VITE_API_URL=http://localhost:4392/api

# For Docker deployment
FRONTEND_URL=http://localhost:8039
VITE_API_URL=http://localhost:4392/api

# ============================================
# DATABASE
# ============================================
# Internal PostgreSQL (default - recommended)
POSTGRES_PASSWORD=postgres

# OR use external PostgreSQL (uncomment if needed)
# DATABASE_URL=postgresql://username:password@host.docker.internal:5432/ai_agent_manager

# JWT & Session Secrets (generate random strings)
JWT_SECRET=your-jwt-secret-change-in-production
SESSION_SECRET=your-session-secret-change-in-production

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# AI API Keys
GEMINI_API_KEY=your-gemini-api-key
CLAUDE_API_KEY=your-claude-api-key
OPENAI_API_KEY=your-openai-api-key

# Stripe Credentials (Production)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_MONTHLY_PRICE_ID=price_monthly_xxx
STRIPE_YEARLY_PRICE_ID=price_yearly_xxx

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-app-password
SMTP_FROM=noreply@yourdomain.com
ADMIN_EMAIL=joeleboube@yahoo.com
